{% macro build_item(item, restaurant_id) %}
    <p class="bold">{{ item.name }}</p>
    <p>{{ item.price }}</p>
    <p>{{ item.description }}</p>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('edit_menu_item', {'restaurantId': restaurant_id, 'menuItemId': item.id}) }}">Edit</a>
        <a href="{{ path('delete_menu_item', {'restaurantId': restaurant_id, 'menuItemId': item.id}) }}">Delete</a>
    {% endif %}
{% endmacro %}